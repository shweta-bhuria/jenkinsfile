pipeline {
    agent any

    stages {
	
        stage('Build stage') {
            steps {
                withmaven(maven : 'maven') {
				'mvn clean install package'
				
						}
					}
			}
        
		
        stage('testing stage') {
            steps {
                withmaven(maven : 'maven'){
				'mvn test'
				
						}
					}
			}

		
        stage('Deployment Stage') {
            steps {
                withmaven(maven : 'maven'){
				'mvn deploy'
				
						}
					}
			}

}
}